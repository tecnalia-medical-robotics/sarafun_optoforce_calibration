<?xml version="1.0" ?>
<launch>
  <!-- if not in standalone mode, rviz could be launched elsewhere--> 
  <arg name="launch_rviz" default="0"/>

  <arg name="cam_image_topic" default="/camera1/rgb/image_raw"/>
  <arg name="cam_info_topic" default="/camera1/rgb/camera_info"/>
  <arg name="output_frame" default="/camera1_rgb_optical_frame"/>

  <include file ="$(find ar_track_alvar)/launch/pr2_indiv_no_kinect.launch">
    <arg name="marker_size" value="9" />
    <arg name="cam_image_topic" value="$(arg cam_image_topic)" />
    <arg name="cam_info_topic" value="$(arg cam_info_topic)" />
    <arg name="output_frame" value="$(arg output_frame)" />
  </include>

  <!-- visualization tool -->
  <include if="$(arg launch_rviz)" file ="$(find sarafun_optoforce_calibration)/launch/rviz.launch">
    <arg name="config" value="sarafun_demo.rviz" />
  </include>
  <!-- optoforce model insertion in the visualization -->
  <include file ="$(find sarafun_optoforce_calibration)/launch/display_optoforce.launch">
    <arg name="reference_frame" value="$(arg output_frame)"/>
  </include>
</launch>
